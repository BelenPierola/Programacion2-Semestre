#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;
void main()

{
float n,x,suma,i,f,j;

cout<<"Ingrese n:  ";
cin>>n;
cout<<"Ingrese x:  ";
cin>>x;

suma=5;
for(i=2;i<=n;i=i+2)
 {
  f=1;
  for(j=1;j<=n;j++)
    f=f*j;
  suma=suma+(pow(x,i)/f);
 }
cout<<"La suma es:  "<<suma;
getch();
}
