#include "stdafx.h"
#include <iostream>
#include "conio.h"
#define TAM 100

using namespace std;

void leer_vector(int vec[], int n);
void mostrar_vector(int vec[],int n);
void incremento_vector(int vec[],int n);
void main()

{
  int v[TAM],n,i;
  do{
  cout<<"Ingrese el numero de elementos: ";
  cin>>n; 
  }while ((n>TAM)||(n<0));
  
  leer_vector(v,n);
  mostrar_vector(v,n);
  incremento_vector(v,n);
  getch();
}
void leer_vector(int vec[], int n)
{
	for(int i=0;i<n;i++)
	{
		cout<<"["<<i<<"]= ";
		cin>>vec[i];
	}
}
void mostrar_vector(int vec[],int n)
{
    for(int i=0;i<n;i++)
	{
		cout<<"["<<i<<"]= ";
		cout<<vec[i]<<"\n";
	}
}	
void incremento_vector(int vec[],int n)
{
	for (int i=0;i<n;i++)
	{
		vec[i]=vec[i]*1.10;
		cout<<"El incremento es igual a: ";
		cout<<vec[i]<<"\n";
	}
}
